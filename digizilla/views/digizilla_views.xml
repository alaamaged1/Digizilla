<odoo>
    <!-- Tree / List View -->
    <record id="view_digizilla_tree" model="ir.ui.view">
        <field name="name">digizilla.tree</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="country"/>
                <field name="joining_date"/>
                <field name="tags"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_digizilla_kanban" model="ir.ui.view">
        <field name="name">digizilla.kanban</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="gender"/>
                <field name="company_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="gender"/></div>
                            <div><field name="company_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_digizilla_form" model="ir.ui.view">
        <field name="name">digizilla.form</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <form string="Digizilla">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="country"/>
                        <field name="joining_date"/>
                        <field name="tags"/>
                        <field name="customers_ids"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Comments">
                            <field name="comments"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_digizilla" model="ir.actions.act_window">
        <field name="name">Digizilla</field>
        <field name="res_model">digizilla.record</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_digizilla_root" name="Digizilla"/>
    <menuitem id="menu_digizilla" parent="menu_digizilla_root" action="action_digizilla" name="Records"/>
</odoo>
